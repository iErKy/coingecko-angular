{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "lib": ["es2022"],
        "strict": true,
        "experimentalDecorators": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "module": "esnext",
        "outDir": ".",
        "rootDir": ".",
        "baseUrl": ".",
        "sourceMap": true,
        "moduleResolution": "node",
        "composite": true,
        "declaration": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
